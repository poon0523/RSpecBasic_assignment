<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebManyoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav>
    <ul>
      <% if logged_in? %>
        <% if @current_user.admin? %>
          <li><%= link_to t('common.users-index'), admin_users_path, id:"users-index" %></li>
          <li><%= link_to t('common.add-user'), new_admin_user_path, id:"add-user" %></li>
          <li><%= link_to t('common.index'), tasks_path, id:"tasks-index" %></li>
          <li><%= link_to t('common.new'), new_task_path, id:"new-task" %></li>
          <li><%= link_to t('common.account-setting'), user_path(@current_user.id), id:"account-setting" %></li>
          <li><%= link_to t('common.sign-out'), session_path(@current_user.id), method: :delete, id:"sign-out" %></li>
        <% else %>
          <li><%= link_to t('common.index'), tasks_path, id:"tasks-index" %></li>
          <li><%= link_to t('common.new'), new_task_path, id:"new-task" %></li>
          <li><%= link_to t('common.account-setting'), user_path(@current_user.id), id:"account-setting" %></li>
          <li><%= link_to t('common.sign-out'), session_path(@current_user.id), method: :delete, id:"sign-out" %></li>
        <% end %>
      <% else %>
        <li><%= link_to t('common.sign-up'), new_user_path, id:"sign-up" %></li>
        <li><%= link_to t('common.sign-in'), new_session_path, id:"sign-in" %></li>
      <% end %>
    </ul>
  </nav>

  <body>
    <p><%= notice %></p>
    <%= yield %>
  </body>
</html>
