<h1><%= t('.title') %></h1>

<p>
  <strong><%= t('activerecord.attributes.user.name') %>:</strong>
  <%= @user.name %>
</p>


<p>
  <strong><%= t('activerecord.attributes.user.email') %>:</strong>
  <%= @user.email %>
</p>


<%= link_to t('common.edit'), edit_user_path, id:"edit-user", class: "btn btn-link" %> | 
<td><%= link_to t('common.destroy'), @user, id:"destroy-user", method: :delete, data: { confirm: t('common.confirm_destroy') }, class: "btn btn-link" %></td>
