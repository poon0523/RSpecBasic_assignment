<h1><%= t('.title') %></h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= Label.human_attribute_name(:name) %></th>
      <th scope="col">タスク数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= label.tasks.size %></td>
        <td><%= link_to t('common.edit'), edit_label_path(label), class:"edit-label",class:"btn btn-primary" %></td>
        <td><%= link_to t('common.destroy'), label, method: :delete, data: { confirm: t('common.confirm_destroy') }, class:"destroy-label",class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
