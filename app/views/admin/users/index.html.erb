<h1><%= t('.title') %></h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= User.human_attribute_name(:name) %></th>
      <th scope="col"><%= User.human_attribute_name(:email) %></th>
      <th scope="col"><%= User.human_attribute_name(:admin) %></th>
      <th scope="col">タスク数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @users.eager_load(:tasks).each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin ? 'あり' : 'なし' %></td>
        <td><%= user.tasks.size  %></td>
        <td><%= link_to t('common.show'), admin_user_path(user.id), class:"show-user btn btn-primary" %></td>
        <td><%= link_to t('common.edit'), edit_admin_user_path(user.id), class:"edit-user btn btn-primary" %></td>
        <td><%= link_to t('common.destroy'), admin_user_path(user.id), method: :delete, data: { confirm: t('common.confirm_destroy') }, class:"destroy-user",class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>

<br>
